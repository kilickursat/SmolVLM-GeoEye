# SmolVLM-GeoEye Environment Configuration
# =========================================
# Copy this file to .env and fill in your actual values

# RunPod Configuration (Required)
# Get your API key from: https://runpod.io/console/user/settings
RUNPOD_API_KEY=your_runpod_api_key_here

# Get your endpoint ID from: https://runpod.io/console/serverless
RUNPOD_ENDPOINT_ID=your_runpod_endpoint_id_here

# HuggingFace Configuration (Optional)
# Get your token from: https://huggingface.co/settings/tokens
# Required for SmolAgent functionality
HF_TOKEN=your_huggingface_token_here

# Application Settings
ENVIRONMENT=development
DEBUG=false

# RunPod Advanced Settings (Optional)
# Maximum timeout for RunPod requests (seconds)
RUNPOD_TIMEOUT=300

# Maximum number of retries for failed requests
RUNPOD_MAX_RETRIES=3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/smolvlm_geoeye.log

# Data Storage Settings
DATA_DIR=data
UPLOAD_DIR=data/uploads
PROCESSED_DIR=data/processed
CACHE_DIR=data/cache

# Model Settings
MODEL_CACHE_DIR=models

# Output Settings
OUTPUT_DIR=outputs

# Security Settings (Optional)
# Encryption key for sensitive data (generate a strong key)
ENCRYPTION_KEY=

# Feature Flags
ENABLE_ASYNC_PROCESSING=true
ENABLE_CACHING=true
ENABLE_MONITORING=true

# Performance Settings
MAX_WORKERS=10
MIN_WORKERS=0
BATCH_SIZE=1

# Cost Optimization
ENABLE_COST_TRACKING=true
COST_ALERT_THRESHOLD=100.0

# Development Settings
# Set to true to use mock RunPod client (no GPU required)
USE_MOCK_RUNPOD=false

# Streamlit Settings (Optional)
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost